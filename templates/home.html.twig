{% extends 'template/base.html.twig' %}

{% block stylesheets %}
    <style type="text/css">
        #graphHighchart {
            min-width: 320px;
            max-width: 50%;
            margin: 100px auto;
        }
    </style>
{% endblock %}

{% block content %}
    <div id="message" class="js--live-message" data-type="phrase" data-time="{{ time }}" style="text-align: center; margin-top:10%; font-size:30px;">
        {% if error %}
            {{ error }}
        {% endif %}
    </div>
    {% if bet %}
        <div id="graphHighchart" data-bet-id="{{ bet.id }}" data-bet-title="{{ bet.name }}" {% if time %}data-live-update="true"{% endif %}>

        </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script src="/js/highcharts.js"></script>
    <script src="/js/highcharts-more.js"></script>
    <script src="/js/modules/exporting.js"></script>
    <script src="/js/liveTime.js"></script>
    <script src="/js/liveCharts.js"></script>
{% endblock %}